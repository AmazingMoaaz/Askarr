FROM node:18-alpine AS node-build

COPY ClientApp /app

WORKDIR /app

RUN npm install

RUN npm run build

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS dotnet-build

# Install Node.js 18.x
RUN apt-get update && \
    apt-get install -y ca-certificates curl gnupg && \
    mkdir -p /etc/apt/keyrings && \
    curl -fsSL https://deb.nodesource.com/gpgkey/nodesource-repo.gpg.key | gpg --dearmor -o /etc/apt/keyrings/nodesource.gpg && \
    echo "deb [signed-by=/etc/apt/keyrings/nodesource.gpg] https://deb.nodesource.com/node_18.x nodistro main" | tee /etc/apt/sources.list.d/nodesource.list && \
    apt-get update && \
    apt-get install -y nodejs && \
    rm -rf /var/lib/apt/lists/*

COPY ./ /app
COPY --from=node-build /app /app/ClientApp

WORKDIR /app

# Restore NuGet packages
RUN dotnet restore Askarr.WebApi.csproj

# Build and publish
RUN dotnet publish -c Release -o publish Askarr.WebApi.csproj --no-restore
RUN rm -rf /app/publish/config
RUN rm -rf /app/publish/tmp
RUN mkdir /app/publish/config
RUN rm -f /app/publish/appsettings.Development.json

FROM mcr.microsoft.com/dotnet/aspnet:6.0

COPY --from=dotnet-build /app/publish/ /root/

# Copy version information to correct location
COPY version.txt /root/version.txt

# allow all users access to this so we can run container as non root.
RUN chmod -R 755 /root

WORKDIR /root/

# Define volumes for persistent data
VOLUME ["/root/config", "/root/tmp"]

# Add labels for container metadata
LABEL org.opencontainers.image.title="Askarr"
LABEL org.opencontainers.image.description="Askarr Media Bot"
LABEL org.opencontainers.image.url="https://github.com/AmazingMoaaz/Askarr"
LABEL org.opencontainers.image.source="https://github.com/AmazingMoaaz/Askarr"
LABEL org.opencontainers.image.vendor="Askarr"
LABEL org.opencontainers.image.licenses="MIT"

ENV ASPNETCORE_URLS="http://*:4545"
EXPOSE 4545/tcp
ENTRYPOINT ["dotnet", "Askarr.WebApi.dll"]
